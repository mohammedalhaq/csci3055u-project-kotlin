<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_height="22dp"
            android:text="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="20sp"
            android:id="@+id/lastRun" android:layout_width="wrap_content" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="176dp" android:layout_marginTop="112dp"/>
    <TextView
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countDown" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="180dp"
            android:layout_marginTop="188dp" app:layout_constraintTop_toTopOf="parent" android:textSize="40sp"
            android:textStyle="bold"/>
    <Button
            android:text="Start Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:onClick="getTime" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="140dp" android:layout_marginBottom="220dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="HIT HERE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="148dp"
            android:layout_marginBottom="156dp" app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="invisible" android:id="@+id/hit" android:onClick="settime"/>
    <TextView
            android:text="Your Score:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="88dp"
            android:layout_marginTop="44dp" app:layout_constraintTop_toTopOf="parent" android:textSize="40sp"/>

</android.support.constraint.ConstraintLayout>